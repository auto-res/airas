{
	"name": "researchgraph",
	"dockerComposeFile": "docker-compose.yaml",
	"service": "researchgraph",
    // To run in a gpu environment, comment out the above code and use the code below
    // "service": "researchgraph-gpu",
	"workspaceFolder": "/workspaces/researchgraph",
	"overrideCommand": true,
	"customizations": {
		"vscode": {
			"extensions": [
        "ms-python.python", // Python
				"charliermarsh.ruff", // Ruff
				"github.copilot", // GitHub Copilot
        "mhutchie.git-graph", // Git Graph
        "eamodio.gitlens", // GitLens
        "gruntfuggly.todo-tree", // Todo Tree
        "ms-python.vscode-pylance", // Pylance
        "oderwat.indent-rainbow", // Indent Rainbow
        "tomoki1207.pdf", // PDF viewer
        "ms-ceintl.vscode-language-pack-ja" // Japanese Language Pack
			],
            "settings": {
                "python.analysis.inlayHints.variableTypes": true,
                "python.analysis.inlayHints.functionReturnTypes": true
            }
		}
	}
}
